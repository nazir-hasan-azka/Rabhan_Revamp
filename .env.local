# Local Development Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Rabhan Revamp"
NEXT_PUBLIC_APP_DESCRIPTION="Enterprise-grade application for 1M+ users"

# Database (SQLite for Development)
DATABASE_URL="file:./dev.db"

# NextAuth.js (Development)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-key-for-local-only-not-for-production

# Rate Limiting (Development)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Security (Development - Replace in Production)
ENCRYPTION_KEY=dev-encryption-key-must-be-32-characters-or-more-for-security
JWT_SECRET=dev-jwt-secret-key-must-be-32-chars-or-more-for-validation
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Feature Flags (Development)
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
